<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginTop="20dp"
        android:id="@+id/nombre"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:hint="Edad"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:id="@+id/edad"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edad"
        android:id="@+id/sexos"
        android:orientation="horizontal">
        <RadioButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sexHombre"
            android:text="Hombre"/>
        <RadioButton 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sexMujer"
            android:text="Mujer"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiempo req.para al maratón de Boston 2020"
        android:id="@+id/btnBoston"
        android:layout_below="@id/sexos"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorías diarias basales"
        android:id="@+id/btnCalorias"
        android:layout_below="@id/btnBoston"
        android:layout_marginTop="20dp"/>


</RelativeLayout>